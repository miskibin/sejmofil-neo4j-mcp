# Neo4j Database Configuration
NEO4J_HOST=bolt+s://neo.msulawiak.pl:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# OpenAI Configuration (optional, for semantic search)
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDINGS_MODEL=text-embedding-3-small

# API Key Authorization
# Comma-separated list of valid API keys (e.g., "key1,key2,key3")
# Each user should have their own unique key
API_KEYS=user1-secret-key-abc123,user2-secret-key-def456,user3-secret-key-ghi789

# Client API Key
# When running the server, set this to one of the API keys from API_KEYS above
CLIENT_API_KEY=user1-secret-key-abc123
